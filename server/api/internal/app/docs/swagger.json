{
    "swagger": "2.0",
    "info": {
        "description": "API server for Reearth Flow - workflow automation and data processing platform",
        "title": "Reearth Flow API",
        "termsOfService": "https://reearth.io/terms/",
        "contact": {
            "name": "Reearth Flow Support",
            "url": "https://github.com/reearth/reearth-flow",
            "email": "support@reearth.io"
        },
        "license": {
            "name": "Apache 2.0",
            "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
        },
        "version": "1.0"
    },
    "host": "localhost:8080",
    "basePath": "/",
    "paths": {
        "/actions": {
            "get": {
                "description": "Get a list of available workflow actions with optional filtering",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "actions"
                ],
                "summary": "List actions",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Search query",
                        "name": "q",
                        "in": "query"
                    },
                    {
                        "type": "string",
                        "description": "Filter by category",
                        "name": "category",
                        "in": "query"
                    },
                    {
                        "type": "string",
                        "description": "Filter by action type (processor, source, sink)",
                        "name": "type",
                        "in": "query"
                    },
                    {
                        "type": "string",
                        "description": "Language code (en, es, fr, ja, zh)",
                        "name": "lang",
                        "in": "query"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "List of actions",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/internal_app.ActionSummary"
                            }
                        }
                    },
                    "400": {
                        "description": "Invalid request",
                        "schema": {
                            "type": "object"
                        }
                    }
                }
            }
        },
        "/actions/segregated": {
            "get": {
                "description": "Get actions organized by category and type",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "actions"
                ],
                "summary": "Get segregated actions",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Search query",
                        "name": "q",
                        "in": "query"
                    },
                    {
                        "type": "string",
                        "description": "Language code (en, es, fr, ja, zh)",
                        "name": "lang",
                        "in": "query"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Actions segregated by category and type",
                        "schema": {
                            "$ref": "#/definitions/internal_app.SegregatedActions"
                        }
                    },
                    "400": {
                        "description": "Invalid request",
                        "schema": {
                            "type": "object"
                        }
                    }
                }
            }
        },
        "/actions/{id}": {
            "get": {
                "description": "Get detailed information about a specific action",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "actions"
                ],
                "summary": "Get action details",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Action ID/Name",
                        "name": "id",
                        "in": "path",
                        "required": true
                    },
                    {
                        "type": "string",
                        "description": "Language code (en, es, fr, ja, zh)",
                        "name": "lang",
                        "in": "query"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Action details",
                        "schema": {
                            "$ref": "#/definitions/internal_app.Action"
                        }
                    },
                    "400": {
                        "description": "Invalid request",
                        "schema": {
                            "type": "object"
                        }
                    },
                    "404": {
                        "description": "Action not found",
                        "schema": {
                            "type": "object"
                        }
                    }
                }
            }
        },
        "/api/password-reset": {
            "post": {
                "description": "Request password reset or set new password",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "auth"
                ],
                "summary": "Password reset",
                "parameters": [
                    {
                        "description": "Password reset information (email only for request, email+token+password for reset)",
                        "name": "reset",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "type": "object"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success message",
                        "schema": {
                            "type": "object"
                        }
                    },
                    "400": {
                        "description": "Bad request",
                        "schema": {
                            "type": "object"
                        }
                    }
                }
            }
        },
        "/api/ping": {
            "get": {
                "description": "Health check endpoint that returns \"pong\"",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "health"
                ],
                "summary": "Ping endpoint",
                "responses": {
                    "200": {
                        "description": "pong",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "/api/signup": {
            "post": {
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "description": "Register a new user account",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "auth"
                ],
                "summary": "User signup",
                "parameters": [
                    {
                        "description": "Signup information",
                        "name": "signup",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "type": "object"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Signup successful",
                        "schema": {
                            "type": "object"
                        }
                    },
                    "400": {
                        "description": "Invalid request",
                        "schema": {
                            "type": "object"
                        }
                    }
                }
            }
        },
        "/api/signup/verify": {
            "post": {
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "description": "Create a verification request for user signup",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "auth"
                ],
                "summary": "Start signup verification",
                "parameters": [
                    {
                        "description": "Verification request information",
                        "name": "verify",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "type": "object"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Verification created"
                    },
                    "400": {
                        "description": "Invalid request",
                        "schema": {
                            "type": "object"
                        }
                    }
                }
            }
        },
        "/api/signup/verify/{code}": {
            "post": {
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "description": "Verify user signup with verification code",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "auth"
                ],
                "summary": "Verify signup code",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Verification code",
                        "name": "code",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Verification successful",
                        "schema": {
                            "type": "object"
                        }
                    },
                    "400": {
                        "description": "Invalid code",
                        "schema": {
                            "type": "object"
                        }
                    }
                }
            }
        },
        "/api/triggers/{triggerId}/execute-scheduled": {
            "post": {
                "description": "Execute a time-driven trigger (scheduled job)",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "triggers"
                ],
                "summary": "Execute scheduled trigger",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Trigger ID",
                        "name": "triggerId",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Execution response with runID, deploymentID, and status",
                        "schema": {
                            "type": "object"
                        }
                    },
                    "400": {
                        "description": "Invalid trigger ID",
                        "schema": {
                            "type": "object"
                        }
                    },
                    "500": {
                        "description": "Internal server error",
                        "schema": {
                            "type": "object"
                        }
                    }
                }
            }
        },
        "/api/triggers/{triggerId}/run": {
            "post": {
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "description": "Execute an API-driven trigger with optional variables and notification URL",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "triggers"
                ],
                "summary": "Execute API trigger",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Trigger ID",
                        "name": "triggerId",
                        "in": "path",
                        "required": true
                    },
                    {
                        "description": "Execution request with optional authToken, notificationURL, and variables (with)",
                        "name": "request",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "type": "object"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Execution response with runID, deploymentID, and status",
                        "schema": {
                            "type": "object"
                        }
                    },
                    "400": {
                        "description": "Invalid request",
                        "schema": {
                            "type": "object"
                        }
                    },
                    "401": {
                        "description": "Missing authentication token",
                        "schema": {
                            "type": "object"
                        }
                    },
                    "500": {
                        "description": "Internal server error",
                        "schema": {
                            "type": "object"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "internal_app.Action": {
            "type": "object",
            "properties": {
                "builtin": {
                    "type": "boolean"
                },
                "categories": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "description": {
                    "type": "string"
                },
                "inputPorts": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "name": {
                    "type": "string"
                },
                "outputPorts": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "parameter": {
                    "type": "object",
                    "additionalProperties": true
                },
                "type": {
                    "$ref": "#/definitions/internal_app.ActionType"
                }
            }
        },
        "internal_app.ActionSummary": {
            "type": "object",
            "properties": {
                "categories": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "description": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "type": {
                    "type": "string"
                }
            }
        },
        "internal_app.ActionType": {
            "type": "string",
            "enum": [
                "processor",
                "source",
                "sink"
            ],
            "x-enum-varnames": [
                "ActionTypeProcessor",
                "ActionTypeSource",
                "ActionTypeSink"
            ]
        },
        "internal_app.SegregatedActions": {
            "type": "object",
            "properties": {
                "byCategory": {
                    "type": "object",
                    "additionalProperties": {
                        "type": "array",
                        "items": {
                            "$ref": "#/definitions/internal_app.ActionSummary"
                        }
                    }
                },
                "byType": {
                    "type": "object",
                    "additionalProperties": {
                        "type": "array",
                        "items": {
                            "$ref": "#/definitions/internal_app.ActionSummary"
                        }
                    }
                }
            }
        }
    },
    "securityDefinitions": {
        "BearerAuth": {
            "description": "Type \"Bearer\" followed by a space and JWT token.",
            "type": "apiKey",
            "name": "Authorization",
            "in": "header"
        }
    }
}