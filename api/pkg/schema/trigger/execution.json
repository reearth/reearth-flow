{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "TriggerExecution",
    "type": "object",
    "properties": {
        "authToken": {
            "type": "string"
        },
        "notificationUrl": {
            "type": "string",
            "format": "uri"
        },
        "with": {
            "type": "object",
            "properties": {
                "cityGmlPath": {"type": "string"},
                "cityCode": {"type": "string"},
                "codelistsPath": {"type": "string"}, 
                "schemasPath": {"type": "string"},
                "schemaJson": {"type": "string"},
                "targetPackages": {
                    "type": "array",
                    "items": {"type": "string"}
                },
                "addNsprefixToFeatureTypes": {"type": "boolean"},
                "extractDmGeometryAsXmlFragment": {"type": "boolean"},
                "outputPath": {"type": "string"}
            }
        }
    },
    "required": ["notificationUrl", "authToken", "with"]
}
